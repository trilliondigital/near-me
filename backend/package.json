{
  "name": "nearme-backend",
  "version": "1.0.0",
  "description": "Backend API for Near Me location-aware reminder app",
  "main": "dist/server.js",
  "scripts": {
    "dev": "TS_NODE_TRANSPILE_ONLY=1 nodemon --exec ts-node --transpile-only src/server.ts",
    "dev:min": "set -a; [ -f .env ] && . ./.env; set +a; ENABLE_FULL_ROUTES=false TS_NODE_TRANSPILE_ONLY=1 npx ts-node --transpile-only src/server.ts",
    "dev:full": "set -a; [ -f .env ] && . ./.env; set +a; ENABLE_FULL_ROUTES=true TS_NODE_TRANSPILE_ONLY=1 npx ts-node --transpile-only src/server.ts",
    "build": "tsc",
    "postbuild": "cp -R src/dashboard dist/dashboard",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "location",
    "reminders",
    "geofencing",
    "mobile"
  ],
  "author": "Near Me Team",
  "license": "MIT",
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.3.42",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
