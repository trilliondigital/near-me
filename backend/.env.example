# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://nearme_user:nearme_password@localhost:5432/nearme_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nearme_dev
DATABASE_USER=nearme_user
DATABASE_PASSWORD=nearme_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-64-characters-long-for-security-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-64-characters-long-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
ENCRYPTION_MASTER_KEY=your-256-bit-encryption-master-key-as-64-hex-characters-here-change-this
VALID_API_KEYS=nm_api_key_1,nm_api_key_2,nm_api_key_3

# External API Keys
FOURSQUARE_API_KEY=your-foursquare-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Push Notification Configuration
# Apple Push Notification Service (APNs)
APNS_TEAM_ID=your-apple-team-id
APNS_KEY_ID=your-apns-key-id
APNS_BUNDLE_ID=com.nearme.app
APNS_PRIVATE_KEY=your-apns-private-key-content
APNS_ENVIRONMENT=development

# Firebase Cloud Messaging (FCM)
FCM_PROJECT_ID=your-firebase-project-id
FCM_PRIVATE_KEY=your-firebase-private-key
FCM_CLIENT_EMAIL=your-firebase-client-email
FCM_SERVER_KEY=your-fcm-server-key

# Push Notification Settings
USE_REAL_PUSH_SERVICES=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/nearme.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
SENSITIVE_RATE_LIMIT_MAX=3

# Security Settings
ENABLE_KEY_ROTATION=true
KEY_ROTATION_INTERVAL_HOURS=168
ENABLE_SECURITY_LOGGING=true
ENABLE_BIOMETRIC_AUTH=true
REQUIRE_DEVICE_VERIFICATION=true
ENABLE_CSRF_PROTECTION=true
ENABLE_HELMET_SECURITY=true

# Background Processing Security
BACKGROUND_PROCESSOR_INTERVAL=5
ENABLE_SNOOZE_PROCESSING=true
ENABLE_MUTE_PROCESSING=true
ENABLE_RETRY_PROCESSING=true
ENABLE_SCHEDULER_PROCESSING=true
ENABLE_CLEANUP=true
CLEANUP_OLDER_THAN_HOURS=24